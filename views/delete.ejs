<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">
        <i class="fas fa-user-plus"></i> Apagar Perfil
      </h1>
      <p>Tem certeza de que gostaria de apagar seu perfil?</p>
      <small id="emailHelp" class="form-text text-muted"> Vamos ficar muito tristes se vocÃª sair, corujinha! </small>
      <% include ./partials/messages %>
      <form action="/delete" method="POST">
        <div class="form-group">
          <input
            type="hidden"
            id="name"
            name="name"
            class="form-control"
            placeholder="Entre com seu Nome "
            value=<%= user.name %>
            value="<%= typeof name != 'undefined' ? name : '' %>"
          />
        </div>
        <div class="form-group">
          <input
            type="hidden"
            id="email"
            name="email"
            class="form-control"
            placeholder="Entre com seu Email"
            value=<%= user.email %>
            value="<%= typeof email != 'undefined' ? email : '' %>"
            readonly
          />
        </div>
        <div class="form-group">
          <input
            type="hidden"
            id="password"
            name="password"
            class="form-control"
            placeholder="Informe a senha"
            value="<%= typeof password != 'undefined' ? password : '' %>"
          />
        </div>
        <div class="form-group">
          <input
            type="hidden"
            id="password2"
            name="password2"
            class="form-control"
            placeholder="Confirme sua senha"
            value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
          />
        </div>
        <button type="submit" class="btn btn-primary btn-block">
          APAGAR CONTA
        </button>
      </form>
      <p><a href="/dashboard">Voltar</a><p>
    </div>
  </div>
</div>
